# Use pre-built qarax binary from build job (avoids sqlx compile-time DB requirement in Docker).
FROM alpine:latest

# Install runtime dependencies
RUN apk add --no-cache libgcc curl

WORKDIR /app

# Copy the pre-built binary (into qarax subdirectory to match CARGO_MANIFEST_DIR)
RUN mkdir -p /app/qarax
COPY target/x86_64-unknown-linux-musl/release/qarax /app/qarax/qarax
RUN chmod +x /app/qarax/qarax

# Copy configuration directory
COPY configuration /app/configuration

EXPOSE 8000

CMD ["/app/qarax/qarax"]
